{
  "name": "backend",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc --noEmit && npm run build:base -- --minify",
    "build:dev": "tsc --noEmit && npm run build:base -- --sourcemap",
    "build:base": "esbuild src/index.ts --outfile=dist/index.js --format=cjs --bundle --platform=node --target=node18.12",
    "watch": "nodemon -e ts --exec \"npm run build:dev && node dist/index.js --enable-source-maps\""
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "esbuild": "^0.16.15",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "winston": "^3.8.2"
  }
}
